<Window x:Class="RideSharing.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:RideSharing.App.Views"
        xmlns:viewModels="clr-namespace:RideSharing.App.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="600"
        Width="990"
        Style="{StaticResource MaterialDesignWindow}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        MinWidth="900"
        MinHeight="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <materialDesign:Card Background="{StaticResource MaterialDesignLightSeparatorBackground}" Padding="20px 5px">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Padding="10px 0px">RideSharing
                </TextBlock>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="50px 0px">
                    <RadioButton x:Name="BtnMenuHome"
                            Style="{StaticResource MaterialDesignTabRadioButton}"
                            Foreground="{StaticResource MaterialDesignLightForeground}"
                            Click="MenuButtonClick"
                            Cursor="Hand"
                            IsChecked="True">Home
                    </RadioButton>
                    <RadioButton x:Name="BtnMenuFindRide"
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 Foreground="{StaticResource MaterialDesignLightForeground}"
                                 Click="MenuButtonClick"
                                 Cursor="Hand">Find a Ride
                    </RadioButton>
                    <RadioButton x:Name="BtnMenuShareRide"
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 Foreground="{StaticResource MaterialDesignLightForeground}"
                                 Click="MenuButtonClick"
                                 Cursor="Hand">Share my Ride
                    </RadioButton>
                    <RadioButton x:Name="BtnMenuVehicles"
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 Foreground="{StaticResource MaterialDesignLightForeground}"
                                 Click="MenuButtonClick"
                                 Cursor="Hand">Manage Vehicles
                    </RadioButton>
                    <RadioButton x:Name="BtnMenuProfile"
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 Foreground="{StaticResource MaterialDesignLightForeground}"
                                 Click="MenuButtonClick"
                                 Cursor="Hand">Profile Settings
                    </RadioButton>
                    <RadioButton x:Name="BtnMenuLogOut"
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 Foreground="{StaticResource MaterialDesignLightForeground}"
                                 Click="MenuButtonClick"
                                 Cursor="Hand">Log Out
                    </RadioButton>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        <materialDesign:Transitioner Grid.Row="1" x:Name="Transitioner" SelectedIndex="0">
            <materialDesign:TransitionerSlide>
                <views:DashboardView x:Name="Dashboard"
                                     DataContext="{Binding DashboardViewModel}" />
            </materialDesign:TransitionerSlide>
            <materialDesign:TransitionerSlide>
                <views:FindRideView x:Name="FindRide"
                                    DataContext="{Binding FindRideViewModel}" />
            </materialDesign:TransitionerSlide>
            <materialDesign:TransitionerSlide>
                <views:MapTestView x:Name="MapView"
                                   DataContext="{Binding MapTestVIewModel}" />
            </materialDesign:TransitionerSlide>
        </materialDesign:Transitioner>
    </Grid>
</Window>
